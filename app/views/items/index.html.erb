<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Sku</th>
    <th>Description</th>
    <th>Provider</th>
    <th>Gender</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.sku %></td>
    <td><%= item.description %></td>
    <td><%= item.provider %></td>
    <td><%= item.gender %></td>
    <td><%= item.category %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

